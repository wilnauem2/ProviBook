rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Insurers collection
    match /insurers/{insurerId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      
      // Settlements subcollection
      match /settlements/{settlementId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }
    
    // Abrechnungen collection
    match /abrechnungen/{abrechnungId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Activities collection - NEW
    match /activities/{activityId} {
      // Anyone authenticated can read activities
      allow read: if isAuthenticated();
      // Anyone authenticated can create activities (for logging their own actions)
      allow create: if isAuthenticated();
      // Only admins can update or delete activities
      allow update, delete: if isAdmin();
    }
    
    // Test data collections
    match /test_insurers/{insurerId} {
      allow read, write: if isAuthenticated();
      
      match /settlements/{settlementId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    match /test_abrechnungen/{abrechnungId} {
      allow read, write: if isAuthenticated();
    }
  }
}
